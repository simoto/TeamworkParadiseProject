.container
    .row
        .col-md-2 Search
        .col-md-4
            input.form-control(type="text" placeholder="Search" ng-model="search")
        .col-md-2 Sort
        .col-md-4
            select.form-control(ng-model="sort")
                option(value=" " ng-selected="true") Default
                option(value="name") Name
                option(value="year") Year
    table.table
        tr
            th Name
            th Year
        tr(ng-repeat="movie in movies | filter: search | orderBy: sort")
            td
                a(href="#/movies/{{ movie._id }}") {{ movie.name }}
            td {{ movie.year | date }}